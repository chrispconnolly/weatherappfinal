<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView_L" parent="TextView">
        <item name="android:textSize">100sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="TextView_M" parent="TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="TextView_S" parent="TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="Divider">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintLeft_toRightOf">parent</item>
        <item name="android:layout_margin">28dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#efefff</item>
    </style>
    <style name="LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HorizontalLayout" parent="LinearLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="VerticalLayout" parent="LinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">12dp</item>
    </style>
</resources>
